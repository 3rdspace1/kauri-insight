# Database (Required)
DATABASE_URL=postgresql://user:password@host:port/database

# AI Provider (Required - handles both insights and visuals)
MODELSLAB_API_KEY=your_modelslab_api_key_here

# Authentication (Required)
NEXTAUTH_SECRET=your_random_secret_here
NEXTAUTH_URL=https://your-app-domain.com

# Optional: Email Provider (for magic link authentication)
NEXTAUTH_EMAIL_FROM=noreply@example.com
RESEND_API_KEY=

# Optional: Email SMTP (if using custom SMTP instead of Resend)
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Optional: Integrations
SLACK_WEBHOOK_URL=

# Environment
NODE_ENV=production
